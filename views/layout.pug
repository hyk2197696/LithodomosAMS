  // Menu Toggle Script
  script.
      $(document).ready(function () {
          getUser();
      })

      function getUser() {
          let req = new XMLHttpRequest();

          req.open("GET", "/dynamic/getUserName");
          req.onreadystatechange = function() {
              if (req.readyState === 4) {
                  $("#userName").html('Hi, ' + req.responseText);
                  if(req.responseText === 'admin'){
                      $("#config").html('<li><a href="/catalog/config?page=1&order=1">User Control</a></li>')
                  }
              }
          }
          req.send();
      }
      $("#menu-toggle").click(function(e) {
          e.preventDefault();
          $("#wrapper").toggleClass("toggled");
      });
      function changeIcon() {
              if ($("#menu-toggle").hasClass("fa-reply")) {
                  $("#menu-toggle").addClass("fa-bars").removeClass("fa-reply");
              }
              else {
                  $("#menu-toggle").addClass("fa-reply").removeClass("fa-bars");
              }
      }
