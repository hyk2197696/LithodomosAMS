                        input#name.form-control(type='text', placeholder='folder name', name='name', required = 'true')

                .modal-footer
                    button.btn.btn-default(type='button', data-dismiss='modal')
                        | close
                    button.btn.btn-primary(type='submit' onclick = 'getdirectory();') Submit
            // /.modal-content
        // /.modal
