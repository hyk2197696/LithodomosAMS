extends layout

block content
    div(class="container-fluid bg-1 text-center")
        h1  #{title}
        img(src="/images/logofinal-01.png" class="img-rounded " width="500" height="500" alt='lithodomos logo')
        br
        if null !== assetNum && undefined !== assetNum
            p Asset number : #{assetNum}

        a(href="/catalog/assetsearch" class="btn btn-default btn-lg")
            span(class="glyphicon glyphicon-search") Search

        a(href="/catalog/fullassetcreate" class="btn btn-default btn-lg")
            span(class="glyphicon glyphicon-plus") Create

        a(href="/catalog/assetfind?id=null" class="btn btn-default btn-lg")
            span(class="glyphicon glyphicon-folder-open")  Browse
        -var assetListHref = "/catalog/assetlist?page=1&sortBy=lastUpdate&valid=true&method=-1" ;
        a(href=assetListHref, class="btn btn-default btn-lg")
            span(class="glyphicon glyphicon-th-list")  All
    // 

